# STRA-System Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
# Update this URL when your Node.js backend is deployed
REACT_APP_API_URL=http://localhost:5000/api

# Application Settings
REACT_APP_NAME=STRA-System
REACT_APP_VERSION=1.0.0

# Session Timeout (in milliseconds)
# Default: 1 hour (3600000 ms)
REACT_APP_SESSION_TIMEOUT=3600000

# API Request Timeout (in milliseconds)
# Default: 30 seconds (30000 ms)
REACT_APP_API_TIMEOUT=30000

# Enable Debug Mode (true/false)
# Shows detailed error messages in development
REACT_APP_DEBUG=true

# Date Format
# Options: DD/MM/YYYY, MM/DD/YYYY, YYYY-MM-DD
REACT_APP_DATE_FORMAT=DD/MM/YYYY

# Currency
REACT_APP_CURRENCY=KSh

# Pagination
REACT_APP_DEFAULT_PAGE_SIZE=10

# Feature Flags (enable/disable features)
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_EXPORT=true
REACT_APP_ENABLE_PRINT=true

# Analytics (optional - for future use)
# REACT_APP_ANALYTICS_ID=your-analytics-id

# Notes:
# - Do not commit .env file to git (it's in .gitignore)
# - Update REACT_APP_API_URL when backend is ready
# - Restart development server after changing .env values
